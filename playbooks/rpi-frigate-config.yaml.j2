version: 0.15

mqtt:
  enabled: false

tls:
  enabled: false

auth:
  enabled: false

record:
  enabled: true
  alerts:
    retain:
      days: 7
      mode: motion

motion:
  frame_height: 25
  threshold: 20

detect:
  enabled: false

review:
